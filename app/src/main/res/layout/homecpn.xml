<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E8EBF2"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/listdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sgn"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#18204E"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHamburger"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logocpn" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/slectn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:background="#EE4239"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/latestoffers"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="City"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/locationtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/location"
                    android:drawableRight="@drawable/forward"
                    android:gravity="left|center"
                    android:text="Select Location"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="#dcdbdb"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left|center"

                    android:text="Category"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/location"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:drawableRight="@drawable/forward"
                    android:gravity="left|center"
                    android:text="Select Category"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="#dcdbdb"></View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lklk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slectn"
                android:background="#fff"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight=".9"
                    android:gravity="left|center"
                    android:text="Featured Coupons In Chandigarh"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#727272"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight=".1"
                    android:gravity="right|center"
                    android:text="More"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#EE4239"
                    android:visibility="gone" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/lklk"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <org.lucasr.twowayview.TwoWayView

                    android:id="@+id/lvItems"
                    style="@style/TwoWayView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawSelectorOnTop="false" />

                <com.promoanalytics.modules.HorizontalListView
                    android:id="@+id/hlvSimpleList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:background="#E8EBF2"
                    android:numColumns="2"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slectn"

                android:background="#fff"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight=".9"
                    android:gravity="left|center"
                    android:text="Coupons In Chandigarh"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#727272"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight=".1"
                    android:gravity="right|center"
                    android:text="More"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#EE4239" />


            </LinearLayout>

            <com.promoanalytics.modules.ExpandableHeightGridView
                android:id="@+id/myId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center"


                android:isScrollContainer="false"
                android:numColumns="2"
                android:stretchMode="columnWidth" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/sgn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center">


            <TextView
                android:id="@+id/texthome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/mapactive"
                android:gravity="center"
                android:text="Map"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#EE4239"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"


            android:gravity="center">


            <TextView
                android:id="@+id/textregular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/list"
                android:gravity="center"
                android:text="List"
                android:textAppearance="?android:textAppearanceSmall"

                android:textColor="#4b4d4e"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/saved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"


            android:gravity="center">


            <TextView
                android:id="@+id/textused"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/saved"
                android:gravity="center"
                android:text="Saved"
                android:textAppearance="?android:textAppearanceSmall"

                android:textColor="#4b4d4e"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"

            android:layout_weight="1"

            android:gravity="center">


            <TextView
                android:id="@+id/textmember"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/profile"
                android:gravity="center"
                android:text="Profile"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#4b4d4e"

                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>