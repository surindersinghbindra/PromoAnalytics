<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvLayout"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:elevation="7dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/couponDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivHeart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/hrtunfilled"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/ivDeal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/ivHeart"
                android:layout_centerInParent="true"
                android:src="@drawable/logocpn" />


        </RelativeLayout>


        <com.promoanalytics.utils.Fonts.RobotoNormalTextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/_30_off"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <com.promoanalytics.utils.Fonts.RobotoLightTextView
            android:id="@+id/tvDealDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Mc'Donalds"
            android:textColor="@color/appGray"
            android:textSize="12sp" />

    </LinearLayout>


</android.support.v7.widget.CardView>